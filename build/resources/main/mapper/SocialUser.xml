<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user.mapper.SocialUserMapper">
    <insert id="save" parameterType="SocialUserDto" keyProperty="user_id">
        insert into social_user (user_id,provider_type)
        values (#{user_id},#{provider_type})
    </insert>

    <select id="findByUserId" parameterType="String" resultType="SocialUserDto">
        select *
        from social_user
        where user_id = #{user_id}
    </select>

    <!-- 소셜 유저가 존재하는지 확인하는 쿼리 -->
    <select id="isSocialUser" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM social_user
        WHERE user_id = #{user_id}
    </select>
</mapper>